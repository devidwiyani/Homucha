<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/abuTua"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sofa1" />

            <TextView
                android:id="@+id/nama_riwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/image_product"
                android:text="Sofa"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jumlah_beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_riwayat"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_toEndOf="@id/image_product"
                android:text="17"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/harga_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_riwayat"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_toLeftOf="@id/jumlah_beli"
                android:layout_toEndOf="@id/jumlah_beli"
                android:text="TextView"
                android:textSize="10sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</FrameLayout>