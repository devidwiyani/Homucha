<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/abuTua"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sofa1" />

            <TextView
                android:id="@+id/nama_riwayat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/image_product"
                android:text="Sofa"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/harga_bayar"
                android:text="Rp. "/>

            <TextView
                android:id="@+id/harga_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="harga" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_riwayat"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_product"
                android:layout_marginTop="5dp"
                android:text="Quantity :" />


            <TextView
                android:id="@+id/jumlah_beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_riwayat"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/quantity"
                android:text="17"/>






        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>