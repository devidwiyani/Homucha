<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".UpdateCartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE CART"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/nama_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_edit"
        android:padding="15dp"
        android:hint="Product "
        android:inputType="text"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_inventory"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/harga_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_edit"
        android:drawableStart="@drawable/ic_price"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:ems="10"
        android:hint="Harga Produk"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/jumlah_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame"
        android:drawableStart="@drawable/ic_cart"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:ems="10"
        android:hint="Jumlah"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        app:cornerRadius="15dp"
        android:text="UPDATE"/>

</LinearLayout>